.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group
        = @group.name
      %ul.main-header__left-box__member-list
        Member :&nbsp;
        %li.main-header__left_box__member-list__member
          - @group.users.each do |user|
            = "#{user.name},"
    .main-header__right-box
      = link_to edit_group_path(@group.id), class: "main-header__right-box__edit-btn" do
        Edit
  .messages
    = render @messages
  .form
    = form_for [@group, @message] do |f|
      .form-box
        = f.text_field :content, class: 'form-box__message', placeholder: 'type a message'
        = f.label :image, class: 'form-box__image' do
          = icon('far', 'image', class: 'icon')
          = f.file_field :image, class: 'form-box__image__file'
      = f.submit 'Send', class: 'submit-btn'